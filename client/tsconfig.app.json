{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmitOnError": false,        // ✅ allow emit even if there are errors
    "noEmit": false,               // ✅ enable JS output
    "outDir": "./dist/app", 
    "rootDir": "./src",   
    "jsx": "react-jsx",

    /* Linting – turn off strict checks to ignore more type errors */
    "strict": false,               // ✅ turn off strict mode
    "noUnusedLocals": false,       // ✅ stop unused variable errors
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedSideEffectImports": false
  },
  "include": ["src"]
}
